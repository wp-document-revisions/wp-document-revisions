{
  "extends": [
    "@wordpress/eslint-plugin/recommended",
    "@typescript-eslint/recommended"
  ],
  "parser": "@typescript-eslint/parser",
  "plugins": [
    "@typescript-eslint"
  ],
  "parserOptions": {
    "ecmaVersion": 2020,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "env": {
    "browser": true,
    "es6": true,
    "node": true,
    "jquery": true
  },
  "globals": {
    "wp": "readonly",
    "wpApiSettings": "readonly",
    "ajaxurl": "readonly",
    "wp_document_revisions": "readonly",
    "wpCookies": "readonly",
    "autosave": "readonly",
    "convertEntities": "readonly",
    "uploader": "readonly",
    "nonce": "readonly",
    "user": "readonly",
    "processed": "readonly"
  },
  "rules": {
    "@typescript-eslint/no-explicit-any": "warn",
    "@typescript-eslint/no-unused-vars": "warn",
    "@typescript-eslint/explicit-function-return-type": "off",
    "@typescript-eslint/explicit-module-boundary-types": "off",
    "no-console": "warn",
    "prefer-const": "error"
  },
  "overrides": [
    {
      "files": ["*.tsx"],
      "rules": {
        "@typescript-eslint/no-unused-vars": "off"
      }
    }
  ]
}
